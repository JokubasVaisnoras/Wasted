<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wasted_app.Views.ItemDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add to cart" />
    </ContentPage.ToolbarItems>
    
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Product:" FontSize="Medium" />
        <Label Text="{Binding Product}" FontSize="Small"/>
        <Label Text="Type:" FontSize="Medium" />
        <Label Text="{Binding Type}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="Price:" FontSize="Medium" />
        <Label Text="{Binding Price, StringFormat='{0} eur'}" FontSize="Small"/>
        <Label Text="Expiration:" FontSize="Medium" />
        <Label Text="{Binding Expiration}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>