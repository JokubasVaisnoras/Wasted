<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wasted_app.Views.CheckoutPage"
             Title="Checkout">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
            <ContentView>
                <Image Source="add.png" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" HeightRequest="32" />
            </ContentView>
            <Label Text="Shopping cart"
                VerticalOptions="FillAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   FontSize="16" Padding="0,0,0,0"/>
            <Button Margin="0,10,0,0" Text="Pay" Clicked="Button_Clicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
